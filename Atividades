//ATV 2
import math

a = 1
b = 2
c = -15
delta = ((b*b)-4*a*c)
x1 = (-b + (math.isqrt(delta))) / (2*a)
x2 = (-b - (math.isqrt(delta))) / (2*a)
print (x1)
print (x2)
print ('O valor de x1 é ', x1 )
print ('O valor de x2 é', x2)
